<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron text-center">
		<div class="container">
			<h1 class><i class="fas fa-fire-alt "></i> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-outline-primary btn-lg" href="/campgrounds/new">Add new campground</a>
			</p>	
		</div>
	</header>


	<div class="row text-center">
		<% campgrounds.forEach(function(campground){  %>
			<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="card">
					<img class="card-img-top" src="<%= campground.image %>">
					<div class="card-body">
						<h5 class="card-title"> <%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-outline-primary">More info</a>
					</div>
					
				</div>
				
				
				
			</div>
		<%  }); %>
	</div>
	
	

</div>


<%- include("../partials/footer") %>